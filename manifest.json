{
  "manifest_version": 3,
  "name": "X Video Resume",
  "version": "1.1",
  "description": "Saves and resumes X (Twitter) video playback position locally.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X Video Resume Settings"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
